---
const { date, title, location, description } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-[--color-1]"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
  >{date}</time
>
<h3 class="mt-1 text-xl font-semibold text-gray-900 dark:text-white">
  {title}
</h3>
<h4 class="mb-3 text-sm font-light">
  {location}
</h4>
<p
  class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400 text-pretty"
>
  {description}
</p>
