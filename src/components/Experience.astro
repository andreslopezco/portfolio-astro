---
import ExperienceItem from "./ExperienceItem.astro";

const EXPERIENCE = [
  {
    date: "2022 - Current",
    title: "Freelancer",
    location: "Bogota, Colombia (Remote)",
    description:
      "As a Freelance Web Developer, I specialize in creating captivating websites using WordPress and Elementor. Focused on enhancing user experience and ensuring responsiveness, I deliver websites that meet the needs of clients and users alike.",
  },
];
---

<ol class="relative ml-4 border-gray-600 border-s">
  {
    EXPERIENCE.map((experience) => (
      <li class="mb-10 ms-4">
        <ExperienceItem {...experience} />
      </li>
    ))
  }
</ol>
