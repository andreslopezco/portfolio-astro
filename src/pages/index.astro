---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import Hero from "../components/Hero.astro";
import Experience from "../components/Experience.astro";
import Project from "../components/Project.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Andres Lopez | Front-End Developer"
  description="Explore a showcase of my talents and projects, demonstrating expertise in HTML, CSS, JavaScript, and more. Let's bring your digital vision to life together."
>
  <Section id="home" class="pt-28 pb-28">
    <Hero />
  </Section>
  <Section id="experience" class="pb-28">
    <h2 class="mb-10 text-3xl font-bold text-balance">Work Experience</h2>
    <Experience />
  </Section>
  <Section id="projects" class="pb-28">
    <h2 class="mb-10 text-3xl font-bold text-balance">Latest Projects</h2>
    <Project />
  </Section>
  <Footer />
</Layout>
