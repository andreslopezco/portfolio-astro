---
const { date, title, location, description } = Astro.props;
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-[--color-1]"
>
</div>
<time class="mb-1 text-sm font-light leading-none text-gray-300">{date}</time>
<h3 class="mt-1 text-xl font-semibold">
  {title}
</h3>
<h4 class="mb-3 text-sm font-light">
  {location}
</h4>
<p class="mb-4 text-base font-normal text-gray-300 text-pretty">
  {description}
</p>
